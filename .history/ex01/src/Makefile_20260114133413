# definitions
INC_DIR			=		../inc
OBJ_DIR			=		../obj
BIN_DIR			=		../bin
NAME			=		phonebook
CXX				=		c++
CXXFLAGS		=		-Wall -Wextra -Werror -std=c++98 -I$(INC_DIR)

# sources and objects
SRCS			=		main.cpp \
						phonebook.cpp \
						contact.cpp
					
OBJS			=		$(SRCS:%.cpp=$(OBJ_DIR)/%.o)

# compilation rule
$(OBJ_DIR)/%.o: %.cpp
						mkdir -p $(OBJ_DIR)
						$(CXX) $(CXXFLAGS) -c $< -o $@

# default target
all: $(BIN_DIR)/$(NAME) link

# linking binary
$(BIN_DIR)/$(NAME): $(OBJS)
						mkdir -p $(BIN_DIR)
						$(CXX) $(CXXFLAGS) $(OBJS) -o $@

# create symlink in sources/ to acees bin/phonebook (binary)
link:					$(BIN_DIR)
						ln -sf $(BIN_DIR)/$(NAME) ./$(NAME)

# cleaning
clean:
						rm -rf $(OBJ_DIR)
						rm -rf $(BIN_DIR)

fclean: clean
						rm -rf $(BIN_DIR)/$(NAME)
						rm -rf $(NAME)

re: fclean all

# phony targets
.PHONY: all clean fclean re link
