#definitions
NAME			=	megaphone
CXX				=	c++
CXXFLAGS		=	-Wall -Wextra -Werror -std=c++98

#Objects?binaries?

#notes:
#any .o file depends on the .cpp file with the same name.
#to build it, compile the .cpp into a .o.‚Äù.
%.o: %.cpp
					$(CXX) $(CXXFLAGS) -c $< -o $@

#Actions

clean:
					rm -rf

fclean:

re:					fclean all

#commands
#prevents acting in files that might be names all, clean, fclean, re
.PHONY:				all clean fclean re