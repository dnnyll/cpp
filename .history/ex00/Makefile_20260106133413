#definitions
NAME			=	megaphone
CXX				=	c++
CXXFLAGS		=	-Wall -Wextra -Werror -std=c++98

#Objects?binaries?
SRCS = megaphone.cpp
#notes: $(SRCS:.cpp=.o) -> take everything in SRCS, replace .cpp with .o
OBJS = $(SRCS:.cpp=.o)


#notes:
#any .o file depends on the .cpp file with the same name.
#to build it, compile the .cpp into a .o.‚Äù.
%.o: %.cpp
					$(CXX) $(CXXFLAGS) -c $< -o $@
#rules
all:	$(NAME)
$(NAME): $(OBJS)
					$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)


#Actions

clean:
					rm -rf $(OBJS)

fclean:
					clean

re:					fclean all

#commands
#prevents acting upon files that might be names all, clean, fclean, re
.PHONY:				all clean fclean re